{
	"name": "astro-chat",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"seed:data": "cd server && npm run seed",
		"dev:client": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"lint": "vue-cli-service lint",
		"test:unit": "vue-cli-service test:unit",
		"server": "pm2 start ecosystem.config.js",
		"server:kill": "pm2 kill",
		"server:test:watch": "cd server && npm run test:watch",
		"server:test:local": "npm run seed:data && cd server && npm run test:local",
		"server:test:ci": "npm run seed:data && cd server && npm run test:ci",
		"test": "npm run test:unit && npm run server:test:local",
		"test:ci": "npm run test:unit && npm run server:test:ci",
		"start": "npm run server && npm run dev:client",
		"deploy": "npm run build && npm run server"
	},
	"author": "Lu-Vuong <lu-vuongle@hotmail.com>",
	"license": "MIT",
	"dependencies": {
		"axios": "^0.18.0",
		"lodash": "^4.17.11",
		"particles.js": "^2.0.0",
		"typed.js": "^2.0.9",
		"vue": "^2.5.17",
		"vue-router": "^3.0.1",
		"vuex": "^3.0.1"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.0.0-rc.12",
		"@vue/cli-plugin-eslint": "^3.0.0-rc.12",
		"@vue/cli-plugin-unit-jest": "^3.0.0-rc.12",
		"@vue/cli-service": "^3.0.0-rc.12",
		"@vue/eslint-config-prettier": "^3.0.4",
		"@vue/test-utils": "^1.0.0-beta.20",
		"babel-core": "7.0.0-bridge.0",
		"babel-jest": "^23.0.1",
		"node-sass": "^4.9.0",
		"pm2": "^3.2.2",
		"sass-loader": "^7.0.1",
		"vue-template-compiler": "^2.5.17"
	}
}
